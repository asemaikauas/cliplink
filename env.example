# Environment Configuration
ENVIRONMENT=development

# HuggingFace Configuration
# Get your token from: https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here

# Application Settings
MAX_WORKERS=4
MAX_CONCURRENT_TASKS=10

# FastAPI Settings
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Video Processing Settings
DEFAULT_VIDEO_QUALITY=best
MAX_VIDEO_DURATION_MINUTES=60
MAX_FILE_SIZE_MB=1000

# AI Model Settings
FACE_DETECTION_CONFIDENCE=0.5
SPEAKER_DIARIZATION_MODEL=pyannote/speaker-diarization-3.1
SCENE_DETECTION_THRESHOLD=30.0

# Paths (relative to project root)
CLIPS_DIR=./clips
DOWNLOADS_DIR=./downloads
TEMP_UPLOADS_DIR=./temp_uploads
TEMP_VERTICAL_DIR=./temp_vertical
MODELS_DIR=./models

# Optional: Database Configuration (if using)
# DATABASE_URL=postgresql://cliplink:cliplink_password@postgres:5432/cliplink

# Optional: Redis Configuration (if using)
# REDIS_URL=redis://redis:6379/0

# Optional: Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Optional: Security Settings
# SECRET_KEY=your_secret_key_here
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# Optional: External API Keys
# YOUTUBE_API_KEY=your_youtube_api_key_here
# GEMINI_API_KEY=your_gemini_api_key_here 